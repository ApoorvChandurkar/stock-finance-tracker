<div class="card card-header stock-info">
  <table>
    <tbody>
      <% @friend_list.each do |friend| %>
        <tr>
          <td><strong>Name: </strong> <%= friend.full_name %></td>
          <td><strong>email: </strong> <%= friend.email %></td>
          <td><strong>Actions </strong> <%= link_to 'View Profile', user_path(friend), class: "btn btn-success btn-sm ml-4" %>
          <% if current_user.not_friends_with?(friend.id) %>
            <%= link_to 'Add friend?', followings_path(friend: friend), class: "btn btn-success btn-sm ml-4", method: :post %>
          <% else %>
            <span class="badge badge-secondary"> You are already friends </span>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>