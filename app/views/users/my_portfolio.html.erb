<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 some-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Search with stock ticker", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
        <%= fa_icon 'search'%>
      <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="response">

</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>