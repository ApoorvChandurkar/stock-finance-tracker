<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search stocks</h3>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 some-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Search with stock ticker", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
        <%= fa_icon 'search'%>
      <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @stock %>
  <div class="card card-header stock-info">
    <strong>Ticker: </strong> <%= @stock.ticker %>
    <strong>Name: </strong> <%= @stock.name %>
    <strong>Price: </strong> <%= @stock.last_price %>
  </div>
<% end %>